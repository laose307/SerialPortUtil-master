<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dhht.serialportutil.MainActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:text="选择串口"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tv_select_path"
        android:textColor="#333333"/>


    <EditText
        android:id="@+id/tv_select_baud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_select_path"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="19200"
        android:textColor="#333333" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_select_baud"
        android:id="@+id/btn_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开串口" />
    <Button
        android:layout_below="@+id/btn_open"
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭串口" />
    <EditText
        android:layout_below="@+id/btn_close"
        android:id="@+id/et_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="588433"
        android:hint="输入指令："/>
    <Button
        android:layout_below="@+id/et_send"
        android:id="@+id/btn_send"
        android:text="发送指令"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/et_send"
        android:onClick="qupi"
        android:text="去皮"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="zhiling"
        android:layout_below="@+id/et_send"
        android:text="置零"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <TextView
        android:layout_below="@+id/btn_send"
        android:id="@+id/tv_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_marginTop="10dp"
        android:text="结果"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_result"
        android:textColor="@android:color/holo_green_dark"/>


</LinearLayout>
